{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Terminal Manager",
  "version": "0.1.0",
  "identifier": "com.terminalmanager.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Terminal Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 500,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "A visual terminal session manager for macOS",
    "longDescription": "Terminal Manager is a macOS desktop application that provides a visual way to manage multiple terminal sessions. Features include session grouping, persistence, and a VS Code-inspired interface.",
    "macOS": {
      "minimumSystemVersion": "11.0"
    }
  }
}
